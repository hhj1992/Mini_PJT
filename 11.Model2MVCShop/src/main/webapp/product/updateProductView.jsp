	<!--  ///////////////////////// CSS ////////////////////////// -->
	<style>
	     body > div.container{
        	margin-top: 10px;
            color: #000;
        }
        
        body {
			padding-top: 50px;
			background: #eee;
			color: #000;
			font-family: 'Gowun Batang', serif;	
    		padding-top : 50px;
}
